@model Subscriber
@{
    ViewData["Title"] = "Subscribe";
}
<div class="d-flex flex-column justify-content-center vh-100 ">

    <div class="mb-5">

        <h2 class="">Subscribe to Our Blog</h2>

        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @ViewData["SuccessMessage"]
            </div>
        }


        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form asp-action="Subscribe" method="post">

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Subscribe</button>
            </div>

        </form>

    </div>

    <div class="mt-3">

        <h2 class="card-title">Unsubscribe from Our Blog</h2>

        <p>If you are already subscribed and wish to unsubscribe, <a asp-controller="Subscriber" asp-action="Unsubscribe" class="btn btn-link p-0">click here</a>.</p>
   
    </div>

</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }